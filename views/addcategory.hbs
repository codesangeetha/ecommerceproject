<body>


                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <h2 class="text-center my-4">Add category</h2>


                    <div class="row mb-3">
                        <div class="col-md-8 col-sm-12 mb-2">

                        </div>
                       
                    </div>
                    <div class="col-md-6">

                        <div class="card">

                            <div class="card-body">

                                <form action="/admin/add-categorysubmit" method="POST"
                                    onsubmit="return validateAddCategory()">

                                    <div class="mb-3">
                                        <label for="categoryName" class="form-label">Category Name</label>
                                        <input type="text" class="form-control" id="categoryName" name="categoryName"
                                            placeholder="Enter category name">
                                        <div id="error-name" class="error-msg"></div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea class="form-control" id="description" name="description"
                                            placeholder="Enter description"></textarea>
                                        <div id="error-description" class="error-msg"></div>
                                    </div>
                                    <div class="error-message">{{msg}}</div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Add Category</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </section>

    
    <script src="/javascripts/addcategory.js"></script>
</body>

</html>