<body>

    <section>
        <div class="container-fluid">
            <div class="row">

                <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                    <div class="position-sticky pt-3">
                        <h5 class="text-center">Admin Panel</h5>
                        <ul class="nav flex-column ul-procatcls ">
                            <li class="nav-item">
                                <a class="nav-link active" href="/admin/category">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/product">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/user">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/brand">Brands</a>
                            </li>
                        </ul>
                    </div>
                </nav>



                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <h2 class="text-center my-4">Brand Management</h2>


                    <div class="row mb-3">
                        <div class="col-md-8 col-sm-12 mb-2">
                            <form action="/admin/brand-search" method="post">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search brand..."
                                        aria-label="Search categories" name="search">
                                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 col-sm-12 text-md-end text-sm-start">
                            <a href="/admin/add-brand"><button class="btn btn-primary w-55">Add New
                                    Brand</button></a>
                            <a href="/admin/logout"><button class="btn btn-primary w-55">Logout</button></a>

                        </div>

                    </div>


                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each arr}}
                            <tr>
                                <th>{{slno}}</th>
                                <td>{{name}}</td>
                                <td>{{description}}</td>
                                <td>
                                    <a href="edit-brand/{{_id}}"><button class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i>
                                        </button></a>
                                    <a href="deletebrand/{{_id}}" onclick="return confirmDelete()"><button
                                            class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button></a>
                                </td>
                            </tr>

                            {{/each}}
                        </tbody>
                    </table>
                </main>
            </div>
        </div>

<div class="container mt-4">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {{#if (gt currentPage 1)}}
                            <li class="page-item">
                                <a class="page-link" href="/admin/brand?page={{subtract currentPage 1}}">Previous</a>
                            </li>
                            {{/if}}

                            {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq ../currentPage this)}}active{{/if}}">
                                <a class="page-link" href="/admin/brand?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}

                            {{#if (lt currentPage totalPages)}}
                            <li class="page-item">
                                <a class="page-link" href="/admin/brand?page={{add currentPage 1}}">Next</a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </section>

    <script>
        function confirmDelete() {
            return confirm("Are you want to delete this category?");
        }
    </script>

</body>

</html>