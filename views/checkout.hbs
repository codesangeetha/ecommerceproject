
    <link rel="stylesheet" href="/stylesheets/checkoutstyle.css">

    <title>Checkout</title>
</head>


<body>

    <section>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Checkout</h2>

            
            <div class="d-flex justify-content-center mb-4">
                <button class="btn  mx-2 checkout-addressbtn" id="addressBtn">Address</button>
                <button class="btn  mx-2 checkout-paybtn" id="paymentBtn">Payment</button>
            </div>

            
            <div class="row">
                <div class="col-md-8">
                    <form>
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullname" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="state" class="form-label">State</label>
                                <input type="text" class="form-control" id="state" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="pincode" class="form-label">Pincode</label>
                                <input type="text" class="form-control" id="pincode" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                        </div>
                    </form>
                    <button class="btn checkout-nextbtn w-80">Next</button>
                </div>

               
                <div class="col-md-4">
                    <h4 class="checkout-ordersummary">Order Summary</h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Items</span>
                            <span>₹ 4211.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Delivery</span>
                            <span>₹ 160.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total</span>
                            <span>₹ 4371.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <strong style="color: rgb(250, 13, 13);">OrderTotal</strong>
                            <strong style="color:rgb(250, 13, 13) ;">₹ 4371.00</strong>
                        </li>
                    </ul>


                </div>
            </div>
        </div>
    </section>
    

</body>