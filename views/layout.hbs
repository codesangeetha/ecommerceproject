{{#if isAdmin}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/adminstyle.css">
    <link rel="stylesheet" href="/stylesheets/cartstyle.css">
    <title>Admin</title>
</head>

<body>
    {{else}}
    <!doctype html>
    <html lang="en">

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


        <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="/stylesheets/homestyle.css">

        <title>SoleWave</title>
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light  nav-class">
                <a class="navbar-brand  title-cls" href="/">SoleWave</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2  search-class" type="search" placeholder="Search"
                            aria-label="Search">
                        <i class="fa-solid fa-magnifying-glass hand-cls"></i>

                        {{#if isLogin}}
                        <a href="/logout">
                            <button class="btn btn-outline-success my-2 my-sm-0  login-cls  "
                                type="button">Logout</button>
                        </a>
                        {{else}}
                        <a href="/login">
                            <button class="btn btn-outline-success my-2 my-sm-0  login-cls  "
                                type="button">Login</button>
                        </a>
                        {{/if}}
                        <span class="text-cls">Returns and orders</span>
                        <a href="/cart"><span class="hand-cls"><i class="fas fa-shopping-cart cart-icon"></i> <span
                                class="text-cart">Cart</span></span></a>

                    </form>
                </div>
            </nav>
        </header>
        {{/if}}


        {{{body}}}
        {{#if isAdmin}}
        <script src="/javascripts/jquery-3.2.1.slim.min.js"></script>
        <script src="/javascripts/popper.min.js"></script>
        <script src="/javascripts/bootstrap.min.js"></script>
    </body>

    </html>
    {{else}}
    <script src="/javascripts/jquery-3.2.1.slim.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
</body>

</html>
{{/if}}