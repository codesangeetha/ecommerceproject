<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">

    <title>Document</title>
</head>

<body>
   <section>
     <div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="position-sticky">
                <h5 class="text-center mb-4">Admin Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Products</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2 class="text-center my-4">Product Management</h2>

            <!-- Search and Add New Product -->
            <div class="row mb-3">
                <div class="col-md-8 col-sm-12 mb-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search products..." aria-label="Search products">
                        <button class="btn btn-outline-secondary" type="button">Search</button>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 text-md-end text-sm-start">
                    <button class="btn btn-primary w-55">Add New Product</button>
                </div>
            </div>

            <!-- Products Table -->
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample product row -->
                    <tr>
                        <th scope="row">1</th>
                        <td>Running Shoes</td>
                        <td>₹ 1200.00</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Formal Shoes</td>
                        <td>₹5000.00</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Running Shoes</td>
                        <td>₹ 1200.00</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </main>
    </div>
</div>
   </section>
</body>
</html>