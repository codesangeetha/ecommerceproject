
    <link rel="stylesheet" href="stylesheets/signupstyle.css">
    <link rel="stylesheet" href="/stylesheets/loginstyle.css">
    <title>Reset Password</title>
</head>

<body>
    <section>
        <div class="container justify-content-center">
            <div class="row mt-5">
                <div class="col-md-3"></div>
                <div class="col-md-5">
                    <div class="card p-4 shadow-sm">
                        <h3 class="text-center mb-4">Reset Password</h3>
                        <form action="/reset-password-submit/{{token}}" method="POST" onsubmit="return resetpasswordValidation()">
                            <div class="mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="password" name="password" 
                                    placeholder="Enter your new password">
                                <div id="error-password" class="error-message text-danger"></div>
                            </div>
                            <button type="submit" class="btn btn-success mb-4 signup-btncls w-65">Reset Password</button>
                        </form>
                        <div>Remembered your password? <a href="/login" class="signup-login">Login</a></div>
                        {{#if errorMessage}}
                        <div class="alert alert-danger mt-3" role="alert">
                            {{errorMessage}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/javascripts/resetpwd.js"></script>
</body>

</html>
