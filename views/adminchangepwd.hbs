
    <link rel="stylesheet" href="/stylesheets/signupstyle.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Change Password</h1>
        
        <!-- Display flash messages -->
        {{#if errorMessage}}
        <div class="alert alert-danger">
            {{errorMessage}}
        </div>
        {{/if}}
        {{#if successMessage}}
        <div class="alert alert-success">
            {{successMessage}}
        </div>
        {{/if}}

        <form action="/admin/changepassword-submit" method="POST" onsubmit="return changepasswordValidation()">
            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control w-50" >
                <div id="error-pwd" class="error-style"></div>
            </div>
            <div class="mb-3">
                <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-control w-50" >
                <div id="error-confirmpwd" class="error-style"></div>
            </div>
            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
    <script src="/javascripts/changePwd.js"></script>
</body>

</html>
